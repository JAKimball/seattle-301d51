<!DOCTYPE html>
<html>
  <head>
    <%- include('./layout/head') %>
  </head>
  <body>
    <main>
    <header>
      <h1>My To-Do List</h1>
      <nav class="navigation">
        <ul>
          <li><a href="/">View All Tasks</a></li>
          <li><a href="/add">Add a New Task</a></li>
        </ul>
      </nav>
    </header>
      <section class="task-view container">
        <ul>
          <% results.forEach(task => { %>
            <li class="task-item" data-id="<%= task.id %>"></li>
            <h4>Task: <%= task.title %></h4>
            <p>Completion status: <%= task.status %></p>
            <a href="/tasks/<%= task.id %>"> View Details </a>
          </li>
        <% }) %>
        </ul>
      </section>
    </main>
  </body>
</html>